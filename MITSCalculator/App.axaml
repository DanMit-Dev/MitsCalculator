<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fluent="clr-namespace:Avalonia.Themes.Fluent;assembly=Avalonia.Themes.Fluent"
             x:Class="MITSCalculator.App">
    
    <Application.Styles>
        <fluent:FluentTheme />
        
        <Style Selector="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Background" Value="#61afef"/> <!-- Accent Color -->
        </Style>
        
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#abb2bf"/> <!-- Default Foreground Color -->
        </Style>

        <Style Selector="TextBlock.Error">
            <Setter Property="Foreground" Value="#e06c75"/> <!-- Error Color -->
        </Style>
        
    </Application.Styles>
</Application>