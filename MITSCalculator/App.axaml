
<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MITSCalculator.App">
    
    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        
        <Style Selector="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="60"/>
        </Style>
        
        <Style Selector="Button.number">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.number:pointerover">
            <Setter Property="Background" Value="#505050"/>
        </Style>
        
        <Style Selector="Button.operator">
            <Setter Property="Background" Value="#FF9500"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.operator:pointerover">
            <Setter Property="Background" Value="#FFB143"/>
        </Style>
        
        <Style Selector="Button.function">
            <Setter Property="Background" Value="#1E90FF"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.function:pointerover">
            <Setter Property="Background" Value="#4169E1"/>
        </Style>
        
        <Style Selector="Button.constant">
            <Setter Property="Background" Value="#32CD32"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.constant:pointerover">
            <Setter Property="Background" Value="#90EE90"/>
        </Style>
        
        <Style Selector="Button.clear">
            <Setter Property="Background" Value="#DC143C"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.clear:pointerover">
            <Setter Property="Background" Value="#FF6B6B"/>
        </Style>
        
        <Style Selector="Button.equals">
            <Setter Property="Background" Value="#FF9500"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.equals:pointerover">
            <Setter Property="Background" Value="#FFB143"/>
        </Style>
    </Application.Styles>
</Application>
