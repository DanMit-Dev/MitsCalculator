
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MITSCalculator.MainWindow"
        Title="MITS Calculator"
        Width="1200" Height="800"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar will be added programmatically -->
        
        <!-- Display Area -->
        <Grid Grid.Row="1" Background="#2D2D30" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock x:Name="HistoryDisplay" 
                       Grid.Row="0"
                       Text=""
                       Foreground="#CCCCCC"
                       FontSize="14"
                       HorizontalAlignment="Right"
                       Margin="10,5"/>
            
            <TextBlock x:Name="MainDisplay" 
                       Grid.Row="1"
                       Text="0"
                       Foreground="White"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Right"
                       Margin="10"/>
        </Grid>
        
        <!-- Button Grid -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Row 0 - Functions -->
            <Button Grid.Row="0" Grid.Column="0" Content="sin" Click="Function_Click" Classes="function"/>
            <Button Grid.Row="0" Grid.Column="1" Content="cos" Click="Function_Click" Classes="function"/>
            <Button Grid.Row="0" Grid.Column="2" Content="tan" Click="Function_Click" Classes="function"/>
            <Button Grid.Row="0" Grid.Column="3" Content="log" Click="Function_Click" Classes="function"/>
            <Button Grid.Row="0" Grid.Column="4" Content="√" Click="Function_Click" Classes="function"/>
            
            <!-- Row 1 - More functions -->
            <Button Grid.Row="1" Grid.Column="0" Content="π" Click="Constant_Click" Classes="constant"/>
            <Button Grid.Row="1" Grid.Column="1" Content="x²" Click="Function_Click" Classes="function"/>
            <Button Grid.Row="1" Grid.Column="2" Content="x^y" Click="Operator_Click" Classes="operator"/>
            <Button Grid.Row="1" Grid.Column="3" Content="C" Click="Clear_Click" Classes="clear"/>
            <Button Grid.Row="1" Grid.Column="4" Content="⌫" Click="Backspace_Click" Classes="clear"/>
            
            <!-- Row 2 -->
            <Button Grid.Row="2" Grid.Column="0" Content="(" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="2" Grid.Column="1" Content=")" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="2" Grid.Column="2" Content="CE" Click="ClearEntry_Click" Classes="clear"/>
            <Button Grid.Row="2" Grid.Column="3" Content="÷" Click="Operator_Click" Classes="operator"/>
            
            <!-- Row 3 -->
            <Button Grid.Row="3" Grid.Column="0" Content="7" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="3" Grid.Column="1" Content="8" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="3" Grid.Column="2" Content="9" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="3" Grid.Column="3" Content="×" Click="Operator_Click" Classes="operator"/>
            
            <!-- Row 4 -->
            <Button Grid.Row="4" Grid.Column="0" Content="4" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="4" Grid.Column="1" Content="5" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="4" Grid.Column="2" Content="6" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="4" Grid.Column="3" Content="-" Click="Operator_Click" Classes="operator"/>
            
            <!-- Row 5 -->
            <Button Grid.Row="5" Grid.Column="0" Content="1" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="5" Grid.Column="1" Content="2" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="5" Grid.Column="2" Content="3" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="5" Grid.Column="3" Content="+" Click="Operator_Click" Classes="operator"/>
            
            <!-- Row 6 -->
            <Button Grid.Row="6" Grid.Column="0" Content="0" Grid.ColumnSpan="2" Click="Number_Click" Classes="number"/>
            <Button Grid.Row="6" Grid.Column="2" Content="." Click="Decimal_Click" Classes="number"/>
            <Button Grid.Row="6" Grid.Column="3" Content="=" Click="Equals_Click" Classes="equals"/>
        </Grid>
    </Grid>
</Window>
