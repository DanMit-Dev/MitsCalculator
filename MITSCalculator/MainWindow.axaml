<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MITSCalculator.MainWindow"
        Title="MITS Calculator"
        Width="400"
        Height="600"
        MinWidth="350"
        MinHeight="500"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Display Area -->
        <Border Grid.Row="0" Background="#2C2C2C" Padding="20" Margin="10,10,10,5">
            <StackPanel>
                <TextBlock x:Name="HistoryDisplay" 
                          Text="" 
                          FontSize="14" 
                          Foreground="#888888" 
                          HorizontalAlignment="Right"
                          Height="20"/>
                <TextBlock x:Name="MainDisplay" 
                          Text="0" 
                          FontSize="32" 
                          Foreground="White" 
                          HorizontalAlignment="Right"
                          FontWeight="Bold"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Button Grid -->
        <Grid Grid.Row="1" Margin="10,5,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Row 0: Advanced Functions -->
            <Button Grid.Row="0" Grid.Column="0" Content="sin" Click="Function_Click" Background="#404040" Foreground="White" Margin="2"/>
            <Button Grid.Row="0" Grid.Column="1" Content="cos" Click="Function_Click" Background="#404040" Foreground="White" Margin="2"/>
            <Button Grid.Row="0" Grid.Column="2" Content="tan" Click="Function_Click" Background="#404040" Foreground="White" Margin="2"/>
            <Button Grid.Row="0" Grid.Column="3" Content="log" Click="Function_Click" Background="#404040" Foreground="White" Margin="2"/>
            
            <!-- Row 1: More Functions -->
            <Button Grid.Row="1" Grid.Column="0" Content="√" Click="Function_Click" Background="#404040" Foreground="White" Margin="2"/>
            <Button Grid.Row="1" Grid.Column="1" Content="x²" Click="Function_Click" Background="#404040" Foreground="White" Margin="2"/>
            <Button Grid.Row="1" Grid.Column="2" Content="x^y" Click="Operator_Click" Background="#404040" Foreground="White" Margin="2"/>
            <Button Grid.Row="1" Grid.Column="3" Content="π" Click="Constant_Click" Background="#404040" Foreground="White" Margin="2"/>
            
            <!-- Row 2: Clear and Operations -->
            <Button Grid.Row="2" Grid.Column="0" Content="C" Click="Clear_Click" Background="#FF4444" Foreground="White" Margin="2"/>
            <Button Grid.Row="2" Grid.Column="1" Content="CE" Click="ClearEntry_Click" Background="#FF6666" Foreground="White" Margin="2"/>
            <Button Grid.Row="2" Grid.Column="2" Content="⌫" Click="Backspace_Click" Background="#FF6666" Foreground="White" Margin="2"/>
            <Button Grid.Row="2" Grid.Column="3" Content="÷" Click="Operator_Click" Background="#FF9500" Foreground="White" Margin="2"/>
            
            <!-- Row 3: Numbers 7-9 and multiply -->
            <Button Grid.Row="3" Grid.Column="0" Content="7" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="3" Grid.Column="1" Content="8" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="3" Grid.Column="2" Content="9" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="3" Grid.Column="3" Content="×" Click="Operator_Click" Background="#FF9500" Foreground="White" Margin="2"/>
            
            <!-- Row 4: Numbers 4-6 and subtract -->
            <Button Grid.Row="4" Grid.Column="0" Content="4" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="4" Grid.Column="1" Content="5" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="4" Grid.Column="2" Content="6" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="4" Grid.Column="3" Content="-" Click="Operator_Click" Background="#FF9500" Foreground="White" Margin="2"/>
            
            <!-- Row 5: Numbers 1-3, 0, decimal, and operations -->
            <Button Grid.Row="5" Grid.Column="0" Content="1" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="5" Grid.Column="1" Content="2" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="5" Grid.Column="2" Content="3" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="5" Grid.Column="3" Content="+" Click="Operator_Click" Background="#FF9500" Foreground="White" Margin="2"/>
            
            <!-- Row 6: Zero, decimal, equals -->
            <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Content="0" Click="Number_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="6" Grid.Column="2" Content="." Click="Decimal_Click" Background="#333333" Foreground="White" Margin="2"/>
            <Button Grid.Row="6" Grid.Column="3" Content="=" Click="Equals_Click" Background="#FF9500" Foreground="White" Margin="2"/>
        </Grid>
    </Grid>
</Window>