modules = ["dotnet-8.0"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Calculator"

[[workflows.workflow]]
name = "Calculator"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MITSCalculator && dotnet run"

[workflows.workflow.metadata]
outputType = "console"

[nix]
channel = "stable-25_05"
packages = ["fontconfig", "xorg.libX11", "xorg.libXrandr", "xorg.libXcursor", "xorg.libICE", "xorg.libSM", "xorg.libXext", "xorg.libXi", "mesa"]
